<!doctype html>
<html lang="ru">
<head>
    {% include 'header.html'%}
</head>
<body>
<div class="content-wrapper {{ theme ?? 'light' }}">
    <div class="card form-card">
        <form action="/login" method="post">
            <div class="form-group">
                <label for="login">Имя пользователя</label>
                <input type="text" class="form-control" name="login" id="login" placeholder="Юзернейм" required autocomplete="off">
            </div>

            <div class="form-group">
                <label for="password">Пароль от аккаунта</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Пароль" required>
            </div>

            <button type="submit" class="btn btn-primary">Войти</button>
            <a href="/register">Ещё нет аккаунта?</a>
        </form>
    </div>
</div>
<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>